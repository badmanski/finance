.panel.panel-default
  .panel-heading
    %h3.panel-title= t(:add_entry)
  .panel-body
    = form_for @entry do |f|
      .form-group
        = f.text_field :name, placeholder: t(:name), class: 'form-control input-sm'
      .form-group
        = f.number_field :amount, min: 0, placeholder: t(:amount), class: 'form-control input-sm', required: true, step: 0.01, pattern: '\\d*'
      .form-group
        = f.select :entry_type_id, grouped_options_for_select(@types), {}, { class: 'form-control input-sm' }
      = submit_tag t(:add), class: 'btn btn-default btn-block btn-sm'
